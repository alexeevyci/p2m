<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    	<div class="last_product_carousel">
    	{% for product in products %}
			<div class="carousel_item">
				{% set productLink = path('product', {'product': product.id}) %}
		  		<a href="{{ productLink }}">
		  			{% if(product.productFiles|length > 0) %}
		  				<img src="img/products/{{product.productFiles[0].name}}" alt="machine_1.jpg">
		  			{% else %}
		  				<img src="img/no_product_image.png" alt="machine_1.jpg">
		  			{% endif %}
		  		</a>
		  		<a href="{{ productLink }}">{{product.name}}</a>
		  		<a href="{{ productLink }}" class="carousel_item_code">product.reference</a>
		  	</div> 
	    {% endfor %}
		</div>
