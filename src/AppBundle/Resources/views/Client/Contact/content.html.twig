<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2">
    	<div id="contact_map"></div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mrg_top_30 contact_form">            
        {{ form_start(contactForm) }}
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 bk_color_ddd">
                    <h4>ENQUIRY FORM</h4>
                    <div class="form-group">
                        {{ form_label(contactForm.company) }}
                        {{ form_widget(contactForm.company, { 'attr': {'class': 'form-control', 'placeholder': contactForm.company.vars.label}}) }}
                        {{ form_errors(contactForm.company) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(contactForm.name) }}
                        {{ form_widget(contactForm.name, { 'attr': {'class': 'form-control', 'placeholder': contactForm.name.vars.label}}) }}
                        {{ form_errors(contactForm.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(contactForm.telephone) }}
                        {{ form_widget(contactForm.telephone, { 'attr': {'class': 'form-control', 'placeholder': contactForm.telephone.vars.label}}) }}
                        {{ form_errors(contactForm.telephone) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(contactForm.email) }}
                        {{ form_widget(contactForm.email, { 'attr': {'class': 'form-control', 'placeholder': contactForm.email.vars.label}}) }}
                        {{ form_errors(contactForm.email) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 bk_color_ddd">
                    <h4 class="invisible">Just for padding</h4>
                    <div class="form-group">
                        {{ form_label(contactForm.details) }}
                        {{ form_widget(contactForm.details, { 'attr': {'class': 'form-control description_height', 'placeholder': contactForm.details.vars.label}}) }}
                        {{ form_errors(contactForm.details) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(contactForm.interest) }}
                        {{ form_widget(contactForm.interest, { 'attr': {'class': 'form-control', 'placeholder': contactForm.interest.vars.label}}) }}
                        {{ form_errors(contactForm.interest) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(contactForm.contactMethod) }}
                        {{ form_widget(contactForm.contactMethod, { 'attr': {'class': 'form-control', 'placeholder': contactForm.contactMethod.vars.label}}) }}
                        {{ form_errors(contactForm.contactMethod) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 contact_note">
                    <h4>PLEASE NOTE</h4>
                    <p class="note">This form is for general enquiries regarding our company, website and for expressing your interest in selling your machines through us.</p><p> If you wish to contact us about purchasing a particular machine then please click the 'contact us about this item' button for that particular machine on the category and product pages.</p><p> Alternatively call us on <strong>+44 (0)1457 766 760</strong></p>
<!--                     <p class="required">* Required Fields</p> -->
                    <div class="form-group text-center">
                        {{ form_widget(contactForm.send, { 'attr': {'class': 'btn btn-lime'}}) }}
                    </div>
                </div>
            </div>
            <!-- <div class="form-group" id="grecaptcha_wrapper">
                <div class="g-recaptcha" data-sitekey="6LcthyoUAAAAADMuvPuy17kfoDB8v3u7BAYA7bd4" data-size="normal"></div>
            </div> -->
            
        {{ form_end(contactForm) }}
    </div>
</div>
<script>
  function initMap() {
    var point = {lat: -25.363, lng: 131.044};
    var map = new google.maps.Map(document.getElementById('contact_map'), {
      zoom: 6,
      center: point
    });
    var marker = new google.maps.Marker({
      position: point,
      map: map
    });
  }
</script>
<script async defer
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAe0apUUM54eripUfE3ioVAOxy2GJzZCkU&callback=initMap">
</script>
